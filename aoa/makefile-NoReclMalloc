
CC = gcc

CC_FLAGS = -g -ggdb -O3 -m64 -std=c99 -Wall -fgnu89-inline -DMALLOC -Wno-unused-function
CC_CAS = -pthread
LNK_GTHREAD = -pthread
TCM = -L. -ltcmalloc
OBJECTS = lfl-NoOrDelayRecl.o worker.o lfhash.o allocator.o main_test.o debugging.o
TEST_OBJS = 

#######################ALL######################
all: test-NoReclMalloc

h: test-hash-NoReclMalloc
#######################TEST######################

test-NoReclMalloc: ${OBJECTS} ${TEST_OBJS}
	${CC} ${CC_FLAGS} \
	${OBJECTS} ${TEST_OBJS} -o $@ ${LNK_GTHREAD} ${TCM}

test-hash-NoReclMalloc: hash ${OBJECTS} ${TEST_OBJS}
	${CC} ${CC_FLAGS} \
	${OBJECTS} ${TEST_OBJS} -o $@ ${LNK_GTHREAD} ${TCM}


hash:
	$(eval CC_FLAGS += -DHASH_OP)
	
######################OBJECTS######################


allocator.o: allocator.c allocator.h	
	${CC} ${CC_FLAGS} ${CC_CAS} -c $*.c -o $@

lfhash.o: lfhash.c lfhash.h globals.h lfl.h 	
	${CC} ${CC_FLAGS} ${CC_CAS} -c $*.c -o $@

lfl-NoOrDelayRecl.o: lfl-NoOrDelayRecl.c 
	${CC} ${CC_FLAGS} ${CC_CAS} -c $*.c -o $@

worker.o: worker.c worker.h	
	${CC} ${CC_FLAGS} ${CC_CAS} -c $*.c -o $@

debugging.o: debugging.c debugging.h
	${CC} ${CC_FLAGS} ${CC_CAS} -c $*.c -o $@	

main_test.o: main_test.c lfl.h globals.h 
	${CC} ${CC_FLAGS} ${CC_CAS} -c $*.c -o $@

######################Clean######################

clean:
	rm -f  *.o

real-clean: clean
	rm -f test-hash-NoRecl test-NoRecl
